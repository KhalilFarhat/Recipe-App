<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- User Settings Category -->
    <PreferenceCategory
        android:title="@string/user_settings_title"
        app:iconSpaceReserved="false">


    <!-- Auto Update Checkbox Preference -->
        <CheckBoxPreference
            app:iconSpaceReserved="true"
            android:key="auto_update"
            android:icon="@drawable/settings"
            android:title="Auto Update"
            android:summaryOn="Automatically update the app"
            android:summaryOff="App is updated manually"
            android:defaultValue="true"/>

        <!-- Notifications Checkbox Preference -->
        <CheckBoxPreference
            app:iconSpaceReserved="true"
            android:key="notifications"
            android:icon="@drawable/bell"
            android:title="Notifications"
            android:summaryOn="You will receive notifications"
            android:summaryOff="You will not receive notifications"
            android:defaultValue="true"/>

        <!-- Dark Mode Checkbox Preference -->
        <CheckBoxPreference
            app:iconSpaceReserved="true"
            android:key="dark_mode"
            android:title="Dark Mode (Beta)"
            android:summaryOn="Dark Mode Enabled"
            android:icon="@drawable/moon"
            android:summaryOff="Dark Mode Disabled"
            android:defaultValue="false"/>

        <!-- Change Email Preference -->
        <Preference
            android:title="Change Email"
            android:icon="@drawable/email"
            android:summary="Update your registered email address"
            android:key="change_email"/>

        <!-- Change Password Preference -->
        <Preference
            android:title="Change Password"
            android:icon="@drawable/password"
            android:summary="Update your account password"
            android:key="change_password"/>

        <!-- Sign Out Preference -->
        <Preference
            android:title="Sign Out"
            android:icon="@drawable/sign_out"
            android:summary="Log out of your account"
            android:key="sign_out"/>

        <!-- Delete Account Preference -->
        <Preference
            android:title="Delete Account"
            android:icon="@drawable/delete"
            android:summary="Permanently delete your account"
            android:key="delete_account"/>

    </PreferenceCategory>


    <!-- App Information Category -->
    <PreferenceCategory
        android:title="@string/app_information"
        app:iconSpaceReserved="false">

        <!-- Privacy Policy Preference -->
        <Preference
            android:title="Privacy Policy"
            android:summary="View our privacy policy"
            android:icon="@drawable/privacy_policy"
            android:key="privacy_policy"/>

        <!-- App License Preference -->
        <Preference
            app:iconSpaceReserved="true"
            android:title="App License"
            android:icon="@drawable/license"
            android:summary="This app is licensed under the MIT License.\nThank you for using our app!"
            android:key="license"/>

        <!-- App Version Preference -->
        <Preference
            android:title="App Version"
            android:icon="@drawable/app_version"
            android:summary="@string/app_version"/>
    </PreferenceCategory>

</PreferenceScreen>
