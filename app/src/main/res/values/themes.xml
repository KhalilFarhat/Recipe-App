<resources>
    <!-- Base application theme. -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Dark_Theme.RecipeApp" parent="Theme.RecipeApp">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="CustomSpinnerDropDownStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:radius">17dp</item>
    </style>

    <color name="red">#F44336</color>
    <color name="teal_200">#80CBC4</color>
    <color name="teal_700">#00796B</color>
</resources>